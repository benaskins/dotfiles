execute pathogen#infect()
syntax on
filetype plugin indent on

set t_Co=256
set background=dark
let g:solarized_termcolors=256
colorscheme solarized

set clipboard=unnamed

set tabstop=2
set shiftwidth=2
set expandtab

set number

inoremap <Left>  <NOP>
inoremap <Right> <NOP>
inoremap <Up>    <NOP>
inoremap <Down>  <NOP>
